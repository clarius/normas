          "texto": "ARTICULO  1  .-(Nota de redacción) (Modificatorio de la Ley 19.742)"
        },
        {
          "referencias-normativas": {
            "referencia-normativa": [
              {
                "cr": null,
                "id": "REFERENCIAS_NORMATIVAS_0",
